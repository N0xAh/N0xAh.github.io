source "https://rubygems.org"

# Jekyll core
gem "jekyll", "~> 4.3"

# Plugins
group :jekyll_plugins do
  gem "jekyll-seo-tag"      # SEO & OpenGraph meta tags
  gem "jekyll-sitemap"      # Automatic sitemap generation
  gem "jekyll-feed"         # RSS/Atom feed
end

# Development server
gem "webrick", "~> 1.8"

# Performance
gem "jekyll-minifier", "~> 0.1.10"

# Fix Ruby 3.4+ warnings
gem "logger"
